<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_marco.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">

    <StackLayout Orientation="Vertical" Spacing="15" Margin="10" VerticalOptions="Center">
        <Label Text="Login" HorizontalOptions="Center" FontSize="35"/>

        <Entry x:Name="usernameEntry" Placeholder="Enter username"/>
        <Entry x:Name="passwordEntry" Placeholder="Enter password" IsPassword="True"/>

        <Button x:Name="loginButton" Text="Login" TextColor="Blue" Clicked="loginButton_Clicked"/>

        <Label x:Name="errLabel" IsVisible="false" FontSize="18"/>
    </StackLayout>

</ContentPage>
